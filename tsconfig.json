{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    // "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "declaration": true,
    "declarationDir": "./dec",
    "pretty": true,
    // "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es6", "esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.md",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "node_modules/**/*.ts"]
}
